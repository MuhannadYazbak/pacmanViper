<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.StartGameController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <Label text="Enter Player Name" wrapText="true">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="playerName" onAction="#nameEntered" promptText="Player">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="enterBtn" mnemonicParsing="false" onAction="#nameEntered" text="Enter" />
               </children>
               <padding>
                  <Insets bottom="50.0" top="50.0" />
               </padding>
            </HBox>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMain" text="Back">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="200.0" right="200.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
